<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:padding="1dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:id="@+id/topViewContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
       >
        <ImageView
            android:id="@+id/topImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/topView"
            android:visibility="gone"
            android:layout_alignBottom="@+id/topImageView"
            android:layout_alignParentBottom="true"
            android:background="#8C000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView


                android:textStyle="bold"
                android:textSize="26sp"
                android:id="@+id/topTitleView"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFF"/>

    <RelativeLayout
        android:id="@+id/bottomViewContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        >
        <ImageView
            android:id="@+id/bottomImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/bottomView"
            android:layout_alignBottom="@+id/bottomImageView"
            android:layout_alignParentBottom="true"
            android:background="#CC000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView

                android:textStyle="bold"
                android:textSize="24sp"
                android:id="@+id/bottomTitleView"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>